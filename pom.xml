<!-- A pom.xml file for TaxonDNA -->
<!-- We used Ant files until Feb 2021, when we switched over to TaxonDNA -->

<project>
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.ggvaidya</groupId>
  <artifactId>TaxonDNA</artifactId>
  <version>2.0-SNAPSHOT</version>

  <name>TaxonDNA</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>11</maven.compiler.source>
    <maven.compiler.target>11</maven.compiler.target>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
          <testSource>${maven.compiler.source}</testSource>
          <testTarget>${maven.compiler.target}</testTarget>
          <compilerArgument>-Xlint:unchecked</compilerArgument>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
